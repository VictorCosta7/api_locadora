// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categories {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  created_at  DateTime @default(now())
  cars        Cars[]

  @@map("categories")
}

model Specification {
  id                 String               @id @default(uuid())
  name               String
  description        String
  created_at         DateTime             @default(now())
  Car_specifications Car_specifications[]

  @@map("specification")
}

model Users {
  id             String   @id @default(uuid())
  name           String
  password       String
  email          String   @unique
  driver_license String
  isAdmin        Boolean  @default(false)
  avatar         String?
  created_at     DateTime @default(now())

  @@map("users")
}

model Cars {
  id                 String               @id @default(uuid())
  name               String
  description        String
  daily_rate         Float                @default(0)
  available          Boolean              @default(true)
  license_plate      String
  fine_amount        Int                  @default(0)
  brand              String
  categories         Categories           @relation(fields: [id_category], references: [id])
  id_category        String
  created_at         DateTime             @default(now())
  Car_specifications Car_specifications[] 
  

  @@map("cars")
}

model Car_specifications {
  id               String   @id @default(uuid())
  car_id           String
  specification_id String
  created_at       DateTime @default(now())
  specification    Specification @relation(fields: [specification_id], references: [id])
  cars             Cars          @relation(fields: [car_id], references: [id])

  @@map("car_specification")
}
